---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Notes - Shrink">
  <article class="notes">
    <h1>Notes</h1>
    <p class="intro">
      A collection of thoughts, insights, and learning notes.
    </p>
    
    <section class="notes-list">
      <!-- Notes entries will go here -->
    </section>
  </article>
</Layout>

<style>
  .notes {
    max-width: 680px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }

  .intro {
    font-size: 1.2rem;
    color: #555;
    margin-bottom: 3rem;
  }

  .notes-list {
    display: grid;
    gap: 2rem;
  }
</style>