---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Future Reading - Shrink">
  <article class="future-reading">
    <h1>Future Reading</h1>
    <p class="intro">
      Books and articles I plan to read next.
    </p>
    
    <section class="reading-list">
      <!-- Reading list entries will go here -->
    </section>
  </article>
</Layout>

<style>
  .future-reading {
    max-width: 680px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }

  .intro {
    font-size: 1.2rem;
    color: #555;
    margin-bottom: 3rem;
  }

  .reading-list {
    display: grid;
    gap: 2rem;
  }
</style>