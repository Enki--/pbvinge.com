---
import Layout from '../layouts/Layout.astro';
import { getFutureReads } from '../data/future-reads';
import '../css/tables.css';

const futureReads = await getFutureReads();
---

<Layout title="Future Reading - Shrink">
  <div class="w-full flex justify-center">
    <div class="w-full max-w-7xl px-2 sm:px-4 lg:px-8 py-8">
      <header class="text-center mb-8">
        <h1 class="text-4xl font-bold mb-4">Future Reading</h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Books I plan to read, organized by subject area.
        </p>
      </header>

      <div class="mb-6">
        <input 
          type="text" 
          id="filterInput" 
          placeholder="Filter books..."
          class="w-full max-w-md mx-auto block px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
        />
      </div>

      <div class="flex justify-center w-full">
        <div class="pbv-table-wrapper w-full max-w-5xl min-w-0 mx-auto">
          <table class="pbv-table w-full text-xs sm:text-sm md:text-base">
          <thead>
            <tr>
              <th scope="col" class="pbv-col-cover py-2 sm:py-3.5 pl-2 sm:pl-4 pr-2 sm:pr-3 text-left font-semibold text-gray-900 sm:pl-6">Cover</th>
              <th scope="col" class="px-2 sm:px-3 py-2 sm:py-3.5 text-left font-semibold text-gray-900 cursor-pointer" data-sort="title">
                Title
                <span class="pbv-sort-icon ml-1 sm:ml-2">↕</span>
              </th>
              <th scope="col" class="px-2 sm:px-3 py-2 sm:py-3.5 text-left font-semibold text-gray-900 cursor-pointer" data-sort="author">
                Author
                <span class="pbv-sort-icon ml-1 sm:ml-2">↕</span>
              </th>
              <th scope="col" class="px-2 sm:px-3 py-2 sm:py-3.5 text-left font-semibold text-gray-900 cursor-pointer" data-sort="class">
                Class
                <span class="pbv-sort-icon ml-1 sm:ml-2">↕</span>
              </th>
              <th scope="col" class="px-2 sm:px-3 py-2 sm:py-3.5 text-left font-semibold text-gray-900 cursor-pointer" data-sort="dateCompleted">
                Status
                <span class="pbv-sort-icon ml-1 sm:ml-2">↕</span>
              </th>
            </tr>
          </thead>
          <tbody id="tableBody">
            {futureReads.map((book) => (
              <tr>
                <td class="pbv-col-cover py-2 sm:py-4 pl-2 sm:pl-4 pr-2 sm:pr-3">
                  <img src={book.coverImage} alt={`Cover of ${book.title}`} class="pbv-table-cover" />
                </td>
                <td class="px-2 sm:px-3 py-2 sm:py-4 font-medium text-gray-900">{book.title}</td>
                <td class="px-2 sm:px-3 py-2 sm:py-4 text-gray-500">{book.author.join(', ')}</td>
                <td class="px-2 sm:px-3 py-2 sm:py-4 text-gray-500">{book.class}</td>
                <td class="px-2 sm:px-3 py-2 sm:py-4 text-gray-500">{book.dateCompleted}</td>
              </tr>
            ))}
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
</Layout>
<style>
  :root[data-theme='dark'] .text-gray-900 {
    color: var(--text-color);
  }

  :root[data-theme='dark'] .text-gray-500 {
    color: var(--muted-text);
  }

  @media (max-width: 768px) {
    th:nth-child(4),
    td:nth-child(4) {
      display: none;
    }
  }
</style>

<script type="module" src="/scripts/future-reading.js"></script>
