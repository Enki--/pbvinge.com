---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import {
  buildBookSearchString,
  getStatusColor,
  normalizeAuthors,
  normalizeCategories,
  normalizeTags
} from '../utils/books';

// Get all published and completed books from the content collection
const books = await getCollection('books', ({ data }) => {
  return data.isPublished && data.status === 'complete';
});

// Sort books by created date, most recent first
const sortedBooks = books.sort((a, b) => 
  new Date(b.data.created || '').getTime() - new Date(a.data.created || '').getTime()
);

const decoratedBooks = sortedBooks.map((book) => {
  const authors = normalizeAuthors(book.data.author);
  const tags = normalizeTags(book.data.tags);
  const categories = normalizeCategories(book.data.category);
  const className = book.data.class || '';

  return {
    ...book,
    authors,
    tags,
    categories,
    className,
    searchString: buildBookSearchString({
      slug: book.slug,
      title: book.data.title,
      subtitle: book.data.subtitle,
      authors,
      categories,
      tags,
      className,
      status: book.data.status,
      summary: book.data.summary,
    }),
  };
});
---

<Layout title="Book Notes - Shrink">
  <div class="books-container">
    <header class="page-header">
      <h1>Book Notes</h1>
      <p class="intro">
        A collection of books I've read, am reading, or plan to read.
      </p>
    </header>

    <div class="search-section">
      <div class="filters">
        <input 
          type="text" 
          id="searchInput" 
          placeholder="Search books by title, author, or tag..."
          class="search-input"
        />
        <select id="classFilter" class="class-select" aria-label="Filter by class">
          <option value="">All classes</option>
          {Array.from(new Set(decoratedBooks.map(b => b.className).filter(Boolean))).sort().map(cls => (
            <option value={cls as string}>{cls as string}</option>
          ))}
        </select>
        <select id="listSort" class="class-select" aria-label="Sort list view">
          <option value="class">Sort by class</option>
          <option value="title">Sort by title</option>
          <option value="author">Sort by author</option>
        </select>
      </div>
      <div class="tag-filters">
        <!-- Tags will be dynamically populated -->
      </div>
      <div class="view-toggle" role="group" aria-label="Switch book layout">
        <button type="button" class="view-button active" data-view-button data-view="tiles">
          Grid
        </button>
        <button type="button" class="view-button" data-view-button data-view="list">
          List
        </button>
        <button type="button" class="view-button" data-view-button data-view="table">
          Table
        </button>
      </div>
    </div>

    <div class="books-view">
      <div class="books-grid view-panel active" id="booksGrid" data-view-panel="tiles">
        {decoratedBooks.map((book) => (
          <article 
            class="book-card" 
            data-book-item 
            data-class={book.className.toLowerCase()} 
            data-search={book.searchString}
            data-title={book.data.title.toLowerCase()}
            data-author={book.authors.join(', ').toLowerCase()}
          >
            <a href={`/books/${book.slug}`} class="book-cover-link">
              <div class="book-cover">
                <img src={book.data.cover} alt={`Cover of ${book.data.title}`} />
              </div>
            </a>
            <div class="book-content">
              <a href={`/books/${book.slug}`} class="book-title-link">
                <h2>{book.data.title}</h2>
                {book.data.subtitle && (
                  <p class="subtitle">{book.data.subtitle}</p>
                )}
              </a>
              <div class="book-meta">
                <span class="author">{book.authors.join(', ')}</span>
                <div class="flex items-center gap-2">
                  <span class={`status-badge ${getStatusColor(book.data.status)}`}>
                    {book.data.status || 'To Read'}
                  </span>
                  {book.data.pages && (
                    <span class="text-sm text-gray-500">
                      {book.data.pages} pages
                    </span>
                  )}
                </div>
                {book.data.class && (
                  <div class="text-sm text-gray-500">Class: {book.data.class}</div>
                )}
              </div>
              {book.categories.length > 0 && (
                <div class="categories">
                  {book.categories.map((cat) => (
                    <span class="category">{cat}</span>
                  ))}
                </div>
              )}
              <div class="book-tags">
                {book.tags.filter(tag => tag !== 'ðŸ“šBook').map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>

      <div class="books-list view-panel" id="booksList" data-view-panel="list">
        {decoratedBooks.map((book) => (
          <article
            class="book-list-item"
            data-book-item
            data-class={book.className.toLowerCase()}
            data-search={book.searchString}
            data-title={book.data.title.toLowerCase()}
            data-author={book.authors.join(', ').toLowerCase()}
          >
            <a href={`/books/${book.slug}`} class="book-list-cover">
              <img src={book.data.cover} alt={`Cover of ${book.data.title}`} />
            </a>
            <div class="book-list-content">
              <div>
                <a href={`/books/${book.slug}`} class="book-title-link">
                  <h2>{book.data.title}</h2>
                </a>
                {book.data.subtitle && (
                  <p class="subtitle">{book.data.subtitle}</p>
                )}
                <p class="author">by {book.authors.join(', ')}</p>
              </div>
              <div class="book-list-meta">
                <span class={`status-badge ${getStatusColor(book.data.status)}`}>
                  {book.data.status || 'To Read'}
                </span>
                {book.data.class && (
                  <span class="class-pill">{book.data.class}</span>
                )}
                {book.data.pages && (
                  <span class="pages">{book.data.pages} pages</span>
                )}
              </div>
              <div class="book-tags">
                {book.tags.filter(tag => tag !== 'ðŸ“šBook').map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>

      <div class="books-table view-panel" id="booksTable" data-view-panel="table">
        <div class="table-responsive">
          <table>
            <thead>
              <tr>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Status</th>
                <th scope="col">Class</th>
                <th scope="col">Pages</th>
                <th scope="col">Tags</th>
              </tr>
            </thead>
            <tbody>
              {decoratedBooks.map((book) => (
                <tr
                  class="book-row"
                  data-book-item
                  data-class={book.className.toLowerCase()}
                  data-search={book.searchString}
                  data-title={book.data.title.toLowerCase()}
                  data-author={book.authors.join(', ').toLowerCase()}
                >
                  <td>
                    <a href={`/books/${book.slug}`} class="table-title-link">
                      {book.data.title}
                    </a>
                    {book.data.subtitle && (
                      <p class="table-subtitle">{book.data.subtitle}</p>
                    )}
                  </td>
                  <td>{book.authors.join(', ')}</td>
                  <td>
                    <span class={`status-badge ${getStatusColor(book.data.status)}`}>
                      {book.data.status || 'To Read'}
                    </span>
                  </td>
                  <td>{book.className || 'â€”'}</td>
                  <td>{book.data.pages || 'â€”'}</td>
                  <td class="tags-cell">
                    {book.tags.filter(tag => tag !== 'ðŸ“šBook').map((tag) => (
                      <span class="tag tag-pill">{tag}</span>
                    ))}
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .books-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--space-4) var(--gutter);
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-5);
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: var(--space-2);
  }

  .intro {
    font-size: 1.2rem;
    color: #555;
    max-width: 600px;
    margin: 0 auto;
  }

  .search-section {
    margin-bottom: var(--space-4);
  }

  .search-input {
    width: 100%;
    max-width: 600px;
    margin: 0 auto var(--space-2);
    display: block;
    padding: 0.8rem 1rem;
    border: 2px solid #eee;
    border-radius: 8px;
    font-size: 1rem;
  }

  .filters { display: grid; grid-template-columns: 1fr 200px 200px; gap: var(--space-2); align-items: center; max-width: 980px; margin: 0 auto var(--space-2); }
  .class-select { width: 100%; padding: 0.7rem 0.9rem; border: 2px solid #eee; border-radius: 8px; background: #fff; font-size: 1rem; }

  .view-toggle {
    display: flex;
    justify-content: center;
    gap: var(--space-1);
    margin-top: var(--space-1);
  }

  .view-button {
    border: 1px solid #d1d5db;
    background: #fff;
    padding: 0.4rem 1rem;
    border-radius: 999px;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .view-button.active {
    background: #111;
    color: #fff;
    border-color: #111;
  }

  .books-view {
    margin-top: var(--space-3);
  }

  .view-panel {
    display: none;
  }

  .view-panel.active {
    display: block;
  }

  .books-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: clamp(var(--space-3), 4vw, var(--space-4));
    padding: 0;
  }

  .book-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    border: none;
    background: transparent;
    transition: transform 0.2s;
  }

  .book-card:hover {
    transform: translateY(-4px);
  }

  .book-cover {
    margin-bottom: 1rem;
    position: relative;
    aspect-ratio: 2/3;
  }

  .book-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 4px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border: 1px solid #e5e5e5;
  }

  .book-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .book-content h2 {
    font-size: 1.2rem;
    margin: 0 0 0.5rem 0;
    color: var(--text-color);
  }

  .book-meta {
    font-size: 0.9rem;
    color: #666;
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .books-list {
    display: grid;
    gap: var(--space-3);
  }

  .book-list-item {
    display: grid;
    grid-template-columns: 90px 1fr;
    gap: var(--space-2);
    padding: var(--space-2);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    background: var(--surface-color);
    box-shadow: 0 2px 6px rgba(15, 23, 42, 0.04);
  }

  .book-list-cover {
    display: block;
    width: 90px;
    aspect-ratio: 2 / 3;
  }

  .book-list-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 6px;
    border: 1px solid #e5e5e5;
  }

  .book-list-content {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .book-list-content h2 {
    font-size: 1.25rem;
    margin: 0;
    color: var(--text-color);
  }

  .subtitle {
    font-size: 0.95rem;
    color: #666;
    margin: 0.25rem 0 0;
  }

  .author {
    font-size: 0.95rem;
    color: #555;
    margin: 0.4rem 0 0;
  }

  .book-list-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
    align-items: center;
  }

  .class-pill {
    background: #eef2ff;
    color: #4338ca;
    padding: 0.25rem 0.65rem;
    border-radius: 999px;
    font-size: 0.8rem;
  }

  .pages {
    font-size: 0.85rem;
    color: #666;
  }

  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .rating {
    color: #ffd700;
    letter-spacing: 1px;
  }

  .summary {
    font-size: 0.95rem;
    color: #555;
    margin: 0.5rem 0;
    line-height: 1.5;
  }

  .categories {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-1);
    margin: var(--space-1) 0;
  }

  .category {
    font-size: 0.85rem;
    color: #666;
    background: #f5f5f5;
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
  }

  .book-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-1);
    margin-top: 0.25rem;
  }

  .tag {
    background: #f0f0f0;
    padding: 0.2rem 0.6rem;
    border-radius: 20px;
    font-size: 0.8rem;
    color: #666;
  }

  .read-more {
    display: inline-block;
    margin-top: 1rem;
    color: var(--link-color);
    font-size: 0.9rem;
    text-decoration: none;
  }

  .read-more:hover {
    text-decoration: underline;
  }

  .book-cover-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .book-title-link {
    text-decoration: none;
    color: inherit;
  }

  .book-title-link:hover h2 {
    color: var(--link-color);
  }

  .books-table {
    padding: 0;
  }

  .table-responsive {
    overflow-x: auto;
    border-radius: 12px;
    border: 1px solid #e5e7eb;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.95rem;
  }

  thead {
    background: #f3f4f6;
  }

  th, td {
    padding: 0.85rem 1rem;
    text-align: left;
    border-bottom: 1px solid #e5e7eb;
    vertical-align: top;
  }

  th {
    font-weight: 600;
    font-size: 0.85rem;
    color: #374151;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .book-row:hover {
    background: #fafafa;
  }

  .table-title-link {
    font-weight: 600;
    text-decoration: none;
    color: inherit;
  }

  .table-title-link:hover {
    color: var(--link-color);
  }

  .table-subtitle {
    margin: 0.25rem 0 0;
    color: #6b7280;
    font-size: 0.85rem;
  }

  .tags-cell {
    max-width: 280px;
  }

  .tag-pill {
    display: inline-block;
    margin: 0 0.25rem 0.25rem 0;
    background: #eef2ff;
    color: #4338ca;
  }

  @media (max-width: 768px) {
    .filters {
      grid-template-columns: 1fr;
    }

    .books-container {
      padding: var(--space-3) var(--gutter);
    }

    th:nth-child(4),
    td:nth-child(4),
    th:nth-child(5),
    td:nth-child(5),
    th:nth-child(6),
    td:nth-child(6) {
      display: none;
    }

    .book-list-item {
      grid-template-columns: 72px 1fr;
      padding: var(--space-1);
    }
  }
</style>

<script>
  // Client-side search functionality
  const searchInput = document.getElementById('searchInput');
  const classFilter = document.getElementById('classFilter');
  const listSort = document.getElementById('listSort');
  const viewButtons = document.querySelectorAll('[data-view-button]');
  const viewPanels = document.querySelectorAll('[data-view-panel]');
  const bookItems = document.querySelectorAll('[data-book-item]');
  const booksList = document.getElementById('booksList');
  const params = new URLSearchParams(window.location.search);
  const initialClass = params.get('class') || '';
  if (classFilter && initialClass) {
    classFilter.value = initialClass;
  }
  
  function applyFilters() {
    const searchTerm = (searchInput?.value || '').toLowerCase();
    const selectedClassValue = classFilter?.value || '';
    const selectedClass = selectedClassValue.toLowerCase();
    bookItems.forEach(item => {
      const itemClass = item.getAttribute('data-class') || '';
      const itemSearch = item.getAttribute('data-search') || '';
      const matchesSearch = itemSearch.includes(searchTerm);
      const matchesClass = !selectedClass || itemClass === selectedClass;
      item.style.display = matchesSearch && matchesClass ? '' : 'none';
    });
    sortList();
    // update query param without reloading
    const url = new URL(window.location.href);
    if (selectedClassValue) url.searchParams.set('class', selectedClassValue); else url.searchParams.delete('class');
    window.history.replaceState({}, '', url);
  }

  function sortList() {
    if (!booksList) return;
    const sortValue = listSort?.value || 'class';
    const items = Array.from(booksList.querySelectorAll('[data-book-item]'));
    const visibleItems = items.filter(item => item.style.display !== 'none');
    const hiddenItems = items.filter(item => item.style.display === 'none');

    visibleItems.sort((a, b) => {
      const aVal = a.getAttribute(`data-${sortValue}`) || '';
      const bVal = b.getAttribute(`data-${sortValue}`) || '';
      return aVal.localeCompare(bVal);
    });

    booksList.innerHTML = '';
    [...visibleItems, ...hiddenItems].forEach(item => booksList.appendChild(item));
  }

  const setView = (view) => {
    viewButtons.forEach(btn => {
      const isActive = btn.getAttribute('data-view') === view;
      btn.classList.toggle('active', isActive);
    });
    viewPanels.forEach(panel => {
      const isActive = panel.getAttribute('data-view-panel') === view;
      panel.classList.toggle('active', isActive);
    });
    try {
      localStorage.setItem('booksView', view);
    } catch (err) {
      // ignore storage errors
    }
  };

  const preferredView = (() => {
    try {
      return localStorage.getItem('booksView');
    } catch {
      return null;
    }
  })();
  if (preferredView) {
    setView(preferredView);
  } else {
    setView('tiles');
  }

  viewButtons.forEach(btn => {
    btn.addEventListener('click', () => setView(btn.getAttribute('data-view')));
  });

  if (searchInput) searchInput.addEventListener('input', applyFilters);
  if (classFilter) classFilter.addEventListener('change', applyFilters);
  if (listSort) listSort.addEventListener('change', sortList);
  // initial run if query present
  applyFilters();
</script>
