---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import {
  buildBookSearchString,
  getStatusColor,
  normalizeAuthors,
  normalizeCategories,
  normalizeTags
} from '../utils/books';
import '../css/tables.css';

// Get all published and completed books from the content collection
const books = await getCollection('books', ({ data }) => {
  return data.isPublished && data.status === 'complete';
});

// Sort books by created date, most recent first
const sortedBooks = books.sort((a, b) => 
  new Date(b.data.created || '').getTime() - new Date(a.data.created || '').getTime()
);

const decoratedBooks = sortedBooks.map((book) => {
  const authors = normalizeAuthors(book.data.author);
  const tags = normalizeTags(book.data.tags);
  const categories = normalizeCategories(book.data.category);
  const className = book.data.class || '';

  return {
    ...book,
    authors,
    tags,
    categories,
    className,
    searchString: buildBookSearchString({
      slug: book.slug,
      title: book.data.title,
      subtitle: book.data.subtitle,
      authors,
      categories,
      tags,
      className,
      status: book.data.status,
      summary: book.data.summary,
    }),
  };
});
---

<Layout title="Book Notes - Shrink">
  <div class="books-container">
    <header class="page-header">
      <h1>Book Notes</h1>
      <p class="intro">
        A collection of books I've read, am reading, or plan to read.
      </p>
    </header>

    <div class="search-section">
      <div class="filters">
        <input 
          type="text" 
          id="searchInput" 
          placeholder="Search books by title, author, or tag..."
          class="search-input"
        />
        <select id="classFilter" class="class-select" aria-label="Filter by class">
          <option value="">All classes</option>
          {Array.from(new Set(decoratedBooks.map(b => b.className).filter(Boolean))).sort().map(cls => (
            <option value={cls as string}>{cls as string}</option>
          ))}
        </select>
      </div>
      <div class="tag-filters">
        <!-- Tags will be dynamically populated -->
      </div>
      <div class="view-toggle" role="group" aria-label="Switch book layout">
        <button type="button" class="view-button active" data-view-button data-view="tiles">
          Grid
        </button>
        <button type="button" class="view-button" data-view-button data-view="table">
          Table
        </button>
      </div>
    </div>

    <div class="books-view">
      <div class="books-grid view-panel active" id="booksGrid" data-view-panel="tiles">
        {decoratedBooks.map((book) => (
          <article 
            class="book-card" 
            data-book-item 
            data-class={book.className.toLowerCase()} 
            data-search={book.searchString}
            data-title={book.data.title.toLowerCase()}
            data-author={book.authors.join(', ').toLowerCase()}
          >
            <a href={`/books/${book.slug}`} class="book-cover-link">
              <div class="book-cover">
                <img src={book.data.cover} alt={`Cover of ${book.data.title}`} />
              </div>
            </a>
            <div class="book-content">
              <a href={`/books/${book.slug}`} class="book-title-link">
                <h2>{book.data.title}</h2>
                {book.data.subtitle && (
                  <p class="subtitle">{book.data.subtitle}</p>
                )}
              </a>
              <div class="book-meta">
                <span class="author">{book.authors.join(', ')}</span>
                <div class="flex items-center gap-2">
                  <span class={`status-badge ${getStatusColor(book.data.status)}`}>
                    {book.data.status || 'To Read'}
                  </span>
                  {book.data.pages && (
                    <span class="text-sm text-gray-500">
                      {book.data.pages} pages
                    </span>
                  )}
                </div>
                {book.data.class && (
                  <div class="text-sm text-gray-500">Class: {book.data.class}</div>
                )}
              </div>
              {book.categories.length > 0 && (
                <div class="categories">
                  {book.categories.map((cat) => (
                    <span class="category">{cat}</span>
                  ))}
                </div>
              )}
              <div class="book-tags">
                {book.tags.filter(tag => tag !== 'ðŸ“šBook').map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>

      <div class="books-table view-panel" id="booksTable" data-view-panel="table">
        <div class="pbv-table-wrapper">
          <table class="pbv-table">
            <thead>
              <tr>
                <th scope="col">Cover</th>
                <th scope="col" data-sort="title">Title <span class="pbv-sort-icon">â†•</span></th>
                <th scope="col" data-sort="author">Author <span class="pbv-sort-icon">â†•</span></th>
                <th scope="col" data-sort="status">Status <span class="pbv-sort-icon">â†•</span></th>
                <th scope="col" data-sort="class">Class <span class="pbv-sort-icon">â†•</span></th>
              </tr>
            </thead>
            <tbody>
              {decoratedBooks.map((book) => (
                <tr
                  class="book-row"
                  data-book-item
                  data-class={book.className.toLowerCase()}
                  data-search={book.searchString}
                  data-title={book.data.title.toLowerCase()}
                  data-author={book.authors.join(', ').toLowerCase()}
                  data-status={(book.data.status || '').toLowerCase()}
                >
                  <td>
                    <img
                      src={book.data.cover}
                      alt={`Cover of ${book.data.title}`}
                      class="pbv-table-cover"
                      loading="lazy"
                    />
                  </td>
                  <td>
                    <a href={`/books/${book.slug}`} class="table-title-link">
                      {book.data.title}
                    </a>
                    {book.data.subtitle && (
                      <p class="table-subtitle">{book.data.subtitle}</p>
                    )}
                  </td>
                  <td>{book.authors.join(', ')}</td>
                  <td>
                    <span class={`status-badge ${getStatusColor(book.data.status)}`}>
                      {book.data.status || 'To Read'}
                    </span>
                  </td>
                  <td>{book.className || 'â€”'}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .books-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--space-4) var(--gutter);
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-5);
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: var(--space-2);
  }

  .intro {
    font-size: 1.2rem;
    color: var(--text-subtle);
    max-width: 600px;
    margin: 0 auto;
  }

  .search-section {
    margin-bottom: var(--space-4);
  }

  .search-input {
    width: 100%;
    max-width: 600px;
    margin: 0 auto var(--space-2);
    display: block;
    padding: 0.8rem 1rem;
    border: 2px solid #eee;
    border-radius: 8px;
    font-size: 1rem;
  }

  .filters { display: grid; grid-template-columns: 1fr 200px; gap: var(--space-2); align-items: center; max-width: 820px; margin: 0 auto var(--space-2); }
  .class-select { width: 100%; padding: 0.7rem 0.9rem; border: 2px solid #eee; border-radius: 8px; background: #fff; font-size: 1rem; }

  .view-toggle {
    display: flex;
    justify-content: center;
    gap: var(--space-1);
    margin-top: var(--space-1);
  }

  .view-button {
    border: 1px solid #d1d5db;
    background: #fff;
    padding: 0.4rem 1rem;
    border-radius: 999px;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .view-button.active {
    background: #111;
    color: #fff;
    border-color: #111;
  }

  :root[data-theme='dark'] .class-select {
    background: #0f172a;
    border-color: #334155;
    color: #e2e8f0;
  }

  :root[data-theme='dark'] .class-select option {
    background: #0f172a;
    color: #e2e8f0;
  }

  :root[data-theme='dark'] .view-button {
    background: #0f172a;
    border-color: #334155;
    color: #e2e8f0;
  }

  :root[data-theme='dark'] .view-button.active {
    background: #e2e8f0;
    color: #0f172a;
    border-color: #e2e8f0;
  }

  .books-view {
    margin-top: var(--space-3);
  }

  .books-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: clamp(var(--space-3), 4vw, var(--space-4));
    padding: 0;
  }

  .book-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    border: none;
    background: transparent;
    transition: transform 0.2s;
  }

  .book-card:hover {
    transform: translateY(-4px);
  }

  .book-cover {
    margin-bottom: 1rem;
    position: relative;
    aspect-ratio: 2/3;
  }

  .book-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 4px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border: 1px solid var(--border-lighter);
  }

  .book-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .book-content h2 {
    font-size: 1.2rem;
    margin: 0 0 0.5rem 0;
    color: var(--text-color);
  }

  .book-meta {
    font-size: 0.9rem;
    color: var(--text-subtle);
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .subtitle {
    font-size: 0.95rem;
    color: var(--text-subtle);
    margin: 0.25rem 0 0;
  }

  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .rating {
    color: #ffd700;
    letter-spacing: 1px;
  }

  .summary {
    font-size: 0.95rem;
    color: var(--text-subtle);
    margin: 0.5rem 0;
    line-height: 1.5;
  }

  .categories {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-1);
    margin: var(--space-1) 0;
  }

  .category {
    font-size: 0.85rem;
    color: var(--text-subtle);
    background: var(--surface-soft);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
  }

  .book-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-1);
    margin-top: 0.25rem;
  }

  .tag {
    background: var(--surface-chip);
    padding: 0.2rem 0.6rem;
    border-radius: 20px;
    font-size: 0.8rem;
    color: var(--text-subtle);
  }

  :root[data-theme='dark'] .intro {
    color: var(--muted-text);
  }

  :root[data-theme='dark'] .book-meta,
  :root[data-theme='dark'] .subtitle {
    color: var(--muted-text);
  }

  :root[data-theme='dark'] .category,
  :root[data-theme='dark'] .tag {
    background: rgba(148, 163, 184, 0.2);
    color: var(--muted-text);
  }

  .read-more {
    display: inline-block;
    margin-top: 1rem;
    color: var(--link-color);
    font-size: 0.9rem;
    text-decoration: none;
  }

  .read-more:hover {
    text-decoration: underline;
  }

  .book-cover-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .book-title-link {
    text-decoration: none;
    color: inherit;
  }

  .book-title-link:hover h2 {
    color: var(--link-color);
  }

  .view-panel {
    display: none;
  }

  .books-grid.view-panel {
    display: none;
  }

  .books-table.view-panel {
    display: none;
  }

  .view-panel.active {
    display: block;
  }

  .books-grid.view-panel.active {
    display: grid;
  }

  .table-title-link {
    font-weight: 600;
    text-decoration: none;
    color: inherit;
  }

  .table-title-link:hover {
    color: var(--link-color);
  }

  .table-title-link:focus-visible {
    outline: 2px solid var(--link-color);
    outline-offset: 2px;
    border-radius: 4px;
  }

  .table-subtitle {
    margin: 0.25rem 0 0;
    color: #6b7280;
    font-size: 0.85rem;
  }

  @media (max-width: 768px) {
    .filters {
      grid-template-columns: 1fr;
    }

    .books-container {
      padding: var(--space-3) var(--gutter);
    }

    th:nth-child(5),
    td:nth-child(5) {
      display: none;
    }

  }
</style>

<script type="module" src={Astro.resolve('../scripts/books.ts')}></script>
