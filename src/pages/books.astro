---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Books - Patrick Vinge">
  <article class="books">
    <h1>Books</h1>
    <p class="intro">
      A curated collection of books I've read and recommend.
    </p>
    
    <section class="book-list">
      <!-- Book entries will go here -->
    </section>
  </article>
</Layout>

<style>
  .books {
    max-width: 680px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }

  .intro {
    font-size: 1.2rem;
    color: #555;
    margin-bottom: 3rem;
  }

  .book-list {
    display: grid;
    gap: 2rem;
  }
</style>