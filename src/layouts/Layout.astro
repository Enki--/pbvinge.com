---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body>
    <slot />
</body>
</html>

<style is:global>
  /* You can move your styles.css content here or import it */
  body {
    margin: 0;
    padding: 20px;
    font-family: system-ui, -apple-system, sans-serif;
  }
</style>