---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Shrink's personal website" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="icon" type="image/png" sizes="48x48" href="/favicon-48x48.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon-180x180.png">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <title>{title}</title>
    <script is:inline>
      (function() {
        try {
          const storedTheme = window.localStorage.getItem('site-theme');
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          const theme = storedTheme || (prefersDark ? 'dark' : 'light');
          document.documentElement.dataset.theme = theme;
        } catch (err) {
          console.warn('Unable to load theme preference', err);
        }
      })();
    </script>
  </head>
  <body>
    <nav>
      <div class="nav-content">
        <a href="/" class="home-link">Shrink</a>
        <div class="nav-links">
          <a href="/books">Books</a>
          <a href="/future-reading">Future Reading</a>
          <a href="/historic-documents">Historic Documents</a>
          <a href="/notes">Notes</a>
          <a href="/flashcards">Flashcards</a>
          <a href="/about">About</a>
           <a href="/timeline">Timeline</a>
          <a href="/presidents">Presidents</a>
        </div>
      </div>
    </nav>
    <main class="site-main">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light;
    --text-color: #1f2933;
    --muted-text: #6b7280;
    --text-subtle: #666;
    --text-strong: #374151;
    --background-color: #ffffff;
    --surface-color: #ffffff;
    --surface-subtle: #f3f4f6;
    --surface-soft: #f5f5f5;
    --surface-chip: #f0f0f0;
    --surface-muted-color: #f4f6fb;
    --chip-background: #edf1f7;
    --chip-text: #374151;
    --border-color: #e5e7eb;
    --border-light: #e5e7eb;
    --border-lighter: #e5e5e5;
    --hover-row: #f8fafc;
    --blockquote-bg: #f4f4f5;
    --blockquote-border: #d1d5db;
    --link-color: #2563eb;
    --space-1: 0.5rem;
    --space-2: 1rem;
    --space-3: 1.5rem;
    --space-4: 2rem;
    --space-5: 3rem;
    --gutter: clamp(1rem, 4vw, 2.5rem);
    --max-width: 1200px;
    --page-max-width: 1200px;
  }

  :root[data-theme='dark'] {
    color-scheme: dark;
    --text-color: #e2e8f0;
    --muted-text: #94a3b8;
    --text-subtle: #94a3b8;
    --text-strong: #e2e8f0;
    --background-color: #0f172a;
    --surface-color: #111c2e;
    --surface-subtle: #0f172a;
    --surface-soft: rgba(148, 163, 184, 0.2);
    --surface-chip: rgba(148, 163, 184, 0.2);
    --surface-muted-color: #18213a;
    --chip-background: rgba(148, 163, 184, 0.25);
    --chip-text: #e2e8f0;
    --border-color: #243354;
    --border-light: #1f2a44;
    --border-lighter: #1f2a44;
    --hover-row: #0b1220;
    --blockquote-bg: rgba(148, 163, 184, 0.18);
    --blockquote-border: #334155;
    --link-color: #93c5fd;
  }

  * {
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    line-height: 1.6;
    color: var(--text-color);
    background: var(--background-color);
    margin: 0;
    padding: 0;
  }

  nav {
    padding: var(--space-3) var(--gutter);
    border-bottom: 1px solid var(--border-color);
    background: var(--background-color);
  }

  .nav-content {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-2);
  }

  .home-link {
    font-weight: 600;
    text-decoration: none;
    color: var(--text-color);
  }

  .nav-links {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-2);
  }

  .nav-links a {
    text-decoration: none;
    color: var(--text-color);
  }

  a {
    color: var(--link-color);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  h1, h2, h3 {
    line-height: 1.3;
  }

  .site-main {
    width: 100%;
    margin: 0 auto;
    padding: var(--space-4) var(--gutter);
    max-width: var(--page-max-width);
  }

  /* Mobile-friendly header */
  @media (max-width: 640px) {
    nav { padding: var(--space-2) var(--gutter); }
    .nav-content {
      flex-direction: column;
      gap: var(--space-1);
    }
    .nav-links {
      justify-content: center;
    }
    .nav-links a {
      font-size: 0.95rem;
    }
  }
</style>
